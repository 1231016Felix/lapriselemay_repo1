<Window x:Class="QuickLauncher.Views.NoteWidget"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Note"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="False"
        ShowInTaskbar="False"
        ResizeMode="NoResize"
        SizeToContent="WidthAndHeight"
        MinWidth="150"
        MaxWidth="350"
        MouseLeftButtonDown="Window_MouseLeftButtonDown">
    
    <Window.Resources>
        <!-- Style du bouton de fermeture -->
        <Style x:Key="CloseButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="#666666"/>
            <Setter Property="FontSize" Value="10"/>
            <Setter Property="Width" Value="16"/>
            <Setter Property="Height" Value="16"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Opacity" Value="0.3"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="8"
                                x:Name="border">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Opacity" Value="1"/>
                                <Setter TargetName="border" Property="Background" Value="#44FF5555"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    
    <!-- Conteneur principal avec ombre -->
    <Border CornerRadius="8" 
            Background="#2D2D30"
            BorderBrush="#3F3F46"
            BorderThickness="1"
            Padding="0"
            Margin="8">
        <Border.Effect>
            <DropShadowEffect Color="Black" 
                            BlurRadius="12" 
                            ShadowDepth="2" 
                            Opacity="0.5"/>
        </Border.Effect>
        
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <!-- Barre de titre avec bouton fermer -->
            <Grid Grid.Row="0" Background="#252526" Margin="0">
                <Border CornerRadius="8,8,0,0" Background="#252526">
                    <Grid Margin="8,4,4,4">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <!-- Bouton copier -->
                        <Button Grid.Column="0" 
                                Content="ðŸ“‹" 
                                Style="{StaticResource CloseButtonStyle}"
                                Click="CopyButton_Click"
                                ToolTip="Copier dans le presse-papiers"/>
                        
                        <!-- Bouton fermer -->
                        <Button Grid.Column="1" 
                                Content="âœ•" 
                                Style="{StaticResource CloseButtonStyle}"
                                Click="CloseButton_Click"
                                ToolTip="Supprimer cette note"/>
                    </Grid>
                </Border>
            </Grid>
            
            <!-- Contenu de la note -->
            <Border Grid.Row="1" Padding="10,8,10,10">
                <TextBlock x:Name="NoteContent"
                           Text="Note content here"
                           TextWrapping="Wrap"
                           Foreground="#E0E0E0"
                           FontSize="12"
                           FontFamily="Segoe UI"
                           LineHeight="18"/>
            </Border>
        </Grid>
    </Border>
</Window>
