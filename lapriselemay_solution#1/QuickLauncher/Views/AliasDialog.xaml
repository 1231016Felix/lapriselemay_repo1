<Window x:Class="QuickLauncher.Views.AliasDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Créer un alias"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ShowInTaskbar="False"
        WindowStartupLocation="CenterOwner"
        Width="450"
        Height="220"
        ResizeMode="NoResize">
    
    <Border Background="#1E1E1E" 
            CornerRadius="8" 
            BorderBrush="#3E3E3E" 
            BorderThickness="1"
            Padding="20">
        <Border.Effect>
            <DropShadowEffect BlurRadius="15" ShadowDepth="0" Opacity="0.5" Color="Black"/>
        </Border.Effect>
        
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <TextBlock Grid.Row="0"
                       Text="Créer un alias"
                       FontSize="16"
                       FontWeight="SemiBold"
                       Foreground="White"
                       Margin="0,0,0,15"/>
            
            <TextBlock Grid.Row="1"
                       Text="Alias (raccourci texte)"
                       FontSize="12"
                       Foreground="#A0A0A0"
                       Margin="0,0,0,5"/>
            
            <TextBox x:Name="AliasTextBox"
                     Grid.Row="2"
                     FontSize="14"
                     Padding="10,8"
                     Background="#2D2D2D"
                     Foreground="White"
                     BorderBrush="#3E3E3E"
                     BorderThickness="1"
                     CaretBrush="White"
                     Margin="0,0,0,10"/>
            
            <TextBlock Grid.Row="3"
                       Text="Cible"
                       FontSize="12"
                       Foreground="#A0A0A0"
                       Margin="0,0,0,5"/>
            
            <TextBox x:Name="TargetTextBox"
                     Grid.Row="4"
                     FontSize="12"
                     Padding="10,8"
                     Background="#2D2D2D"
                     Foreground="#808080"
                     BorderBrush="#3E3E3E"
                     BorderThickness="1"
                     IsReadOnly="True"/>
            
            <StackPanel Grid.Row="5" 
                        Orientation="Horizontal" 
                        HorizontalAlignment="Right"
                        Margin="0,15,0,0">
                <Button Content="Annuler" 
                        Padding="15,8"
                        Margin="0,0,10,0"
                        Background="#3E3E3E"
                        Foreground="White"
                        BorderThickness="0"
                        Cursor="Hand"
                        Click="Cancel_Click"/>
                <Button Content="Créer" 
                        Padding="15,8"
                        Background="#0078D4"
                        Foreground="White"
                        BorderThickness="0"
                        Cursor="Hand"
                        Click="Create_Click"
                        IsDefault="True"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
