<?xml version="1.0" encoding="utf-8"?>
<Application
    x:Class="CleanUninstaller.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CleanUninstaller"
    xmlns:converters="using:CleanUninstaller.Converters">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <XamlControlsResources xmlns="using:Microsoft.UI.Xaml.Controls" />
                <ResourceDictionary Source="Assets/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <!-- Convertisseurs -->
            <converters:BoolToVisibilityConverter x:Key="BoolToVisibility" />
            <converters:BoolToInverseVisibilityConverter x:Key="BoolToInverseVisibilityConverter" />
            <converters:ConfidenceToColorConverter x:Key="ConfidenceToColor" />
            <converters:InstallerTypeToIconConverter x:Key="InstallerTypeToIcon" />
            <converters:StringToBrushConverter x:Key="StringToBrushConverter" />
            <converters:StringToVisibilityConverter x:Key="StringToVisibilityConverter" />
            <converters:BoolToIconConverter x:Key="BoolToIconConverter" />
            <converters:BoolToColorConverter x:Key="BoolToColorConverter" />
            <converters:FileSizeConverter x:Key="FileSizeConverter" />
            <converters:ZeroToVisibleConverter x:Key="ZeroToVisibleConverter" />
            <converters:NullToBoolConverter x:Key="NullToBoolConverter" />
            <converters:NullToVisibilityConverter x:Key="NullToVisibilityConverter" />

            <!-- Couleurs personnalisÃ©es -->
            <SolidColorBrush x:Key="AccentBrush" Color="#0078D4" />
            <SolidColorBrush x:Key="DangerBrush" Color="#E81123" />
            <SolidColorBrush x:Key="SuccessBrush" Color="#107C10" />
            <SolidColorBrush x:Key="WarningBrush" Color="#FF8C00" />
        </ResourceDictionary>
    </Application.Resources>
</Application>
