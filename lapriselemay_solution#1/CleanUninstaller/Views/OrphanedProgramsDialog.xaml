<?xml version="1.0" encoding="utf-8"?>
<ContentDialog
    x:Class="CleanUninstaller.Views.OrphanedProgramsDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:models="using:CleanUninstaller.Models"
    Title="Programmes orphelins et entrées mortes"
    PrimaryButtonText="Nettoyer la sélection"
    SecondaryButtonText="Exporter"
    CloseButtonText="Fermer"
    DefaultButton="Close"
    PrimaryButtonClick="PrimaryButton_Click"
    SecondaryButtonClick="SecondaryButton_Click"
    Style="{StaticResource DefaultContentDialogStyle}">

    <ContentDialog.Resources>
        <Style x:Key="ConfidenceVeryHighStyle" TargetType="Border">
            <Setter Property="Background" Value="#10107C10" />
        </Style>
    </ContentDialog.Resources>

    <Grid Width="850" MinWidth="850" MaxHeight="600">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Description -->
        <InfoBar x:Name="DescriptionInfoBar"
                 IsOpen="True"
                 IsClosable="False"
                 Severity="Informational"
                 Title="Détection des entrées invalides"
                 Message="Ce scan détecte les entrées de registre orphelines : désinstalleurs manquants, dossiers d'installation inexistants, et entrées de registre corrompues."
                 Margin="0,0,0,12" />

        <!-- Barre de progression -->
        <Grid x:Name="ScanningPanel" Grid.Row="1" Margin="0,0,0,16" Visibility="Collapsed">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            
            <StackPanel Orientation="Horizontal" Spacing="12" Margin="0,0,0,8">
                <ProgressRing IsActive="True" Width="20" Height="20" />
                <TextBlock x:Name="ScanStatusText" 
                           Text="Scan en cours..."
                           VerticalAlignment="Center" />
            </StackPanel>
            
            <ProgressBar x:Name="ScanProgressBar" 
                         Grid.Row="1"
                         Value="0" 
                         Maximum="100" />
        </Grid>

        <!-- Toolbar de sélection -->
        <Grid x:Name="ToolbarPanel" Grid.Row="2" Margin="0,0,0,8" Visibility="Collapsed">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <StackPanel Orientation="Horizontal" Spacing="8">
                <CheckBox x:Name="SelectAllCheckBox" 
                          Content="Tout sélectionner" 
                          Click="SelectAllCheckBox_Click" />
                
                <Button Content="Confiance élevée"
                        ToolTipService.ToolTip="Sélectionner uniquement les éléments sûrs à supprimer"
                        Click="SelectHighConfidence_Click"
                        Style="{StaticResource SubtleButtonStyle}" />
            </StackPanel>

            <StackPanel Grid.Column="2" Orientation="Horizontal" Spacing="12">
                <TextBlock x:Name="SelectionCountText"
                           Style="{StaticResource CaptionTextBlockStyle}"
                           Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"
                           VerticalAlignment="Center" />
                <TextBlock x:Name="TotalCountText"
                           Style="{StaticResource CaptionTextBlockStyle}"
                           Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                           VerticalAlignment="Center" />
            </StackPanel>
        </Grid>

        <!-- Légende des niveaux de confiance -->
        <StackPanel x:Name="LegendPanel" Grid.Row="2" Orientation="Horizontal" 
                    Spacing="16" Margin="0,24,0,8" Visibility="Collapsed"
                    HorizontalAlignment="Right">
            <StackPanel Orientation="Horizontal" Spacing="4">
                <Border Width="12" Height="12" CornerRadius="2" Background="#107C10" />
                <TextBlock Text="Très sûr" Style="{StaticResource CaptionTextBlockStyle}" 
                           Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
            </StackPanel>
            <StackPanel Orientation="Horizontal" Spacing="4">
                <Border Width="12" Height="12" CornerRadius="2" Background="#498205" />
                <TextBlock Text="Sûr" Style="{StaticResource CaptionTextBlockStyle}" 
                           Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
            </StackPanel>
            <StackPanel Orientation="Horizontal" Spacing="4">
                <Border Width="12" Height="12" CornerRadius="2" Background="#CA5010" />
                <TextBlock Text="Moyen" Style="{StaticResource CaptionTextBlockStyle}" 
                           Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
            </StackPanel>
            <StackPanel Orientation="Horizontal" Spacing="4">
                <Border Width="12" Height="12" CornerRadius="2" Background="#DA3B01" />
                <TextBlock Text="Prudence" Style="{StaticResource CaptionTextBlockStyle}" 
                           Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
            </StackPanel>
        </StackPanel>

        <!-- Liste des entrées orphelines -->
        <ListView x:Name="OrphanedEntriesListView" 
                  Grid.Row="3"
                  SelectionMode="None"
                  Margin="0,8,0,0">
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                    <Setter Property="Padding" Value="0" />
                    <Setter Property="Margin" Value="0,2" />
                </Style>
            </ListView.ItemContainerStyle>
            <ListView.ItemTemplate>
                <DataTemplate x:DataType="models:OrphanedEntry">
                    <Border Padding="12,10"
                            Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                            CornerRadius="6"
                            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                            BorderThickness="1">
                        <Grid ColumnSpacing="12">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <!-- Checkbox -->
                            <CheckBox IsChecked="{x:Bind IsSelected, Mode=TwoWay}"
                                      VerticalAlignment="Center"
                                      MinWidth="0" />

                            <!-- Indicateur de confiance -->
                            <Border Grid.Column="1" 
                                    Width="4" 
                                    CornerRadius="2"
                                    VerticalAlignment="Stretch"
                                    Background="{x:Bind ConfidenceBrush}" />

                            <!-- Informations -->
                            <StackPanel Grid.Column="2" Spacing="4" VerticalAlignment="Center">
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <FontIcon Glyph="{x:Bind TypeIcon}" 
                                              FontSize="14"
                                              Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                                    <TextBlock Text="{x:Bind DisplayName}"
                                               FontWeight="SemiBold"
                                               TextTrimming="CharacterEllipsis"
                                               ToolTipService.ToolTip="{x:Bind DisplayName}" />
                                    <Border Background="{ThemeResource CardBackgroundFillColorSecondaryBrush}"
                                            CornerRadius="4"
                                            Padding="6,2"
                                            Visibility="{x:Bind FormattedSize, Converter={StaticResource StringToVisibilityConverter}}">
                                        <TextBlock Text="{x:Bind FormattedSize}"
                                                   Style="{StaticResource CaptionTextBlockStyle}"
                                                   FontFamily="Consolas" />
                                    </Border>
                                </StackPanel>
                                
                                <TextBlock Text="{x:Bind FormattedDescription}"
                                           Style="{StaticResource CaptionTextBlockStyle}"
                                           Foreground="{ThemeResource SystemFillColorCriticalBrush}"
                                           TextWrapping="Wrap"
                                           MaxLines="2" />
                                
                                <StackPanel Orientation="Horizontal" Spacing="12">
                                    <TextBlock Style="{StaticResource CaptionTextBlockStyle}"
                                               Foreground="{ThemeResource TextFillColorTertiaryBrush}">
                                        <Run Text="{x:Bind TypeName}" />
                                        <Run Text=" • " />
                                        <Run Text="{x:Bind RegistrySource}" />
                                    </TextBlock>
                                    <TextBlock Text="{x:Bind Publisher}"
                                               Style="{StaticResource CaptionTextBlockStyle}"
                                               Foreground="{ThemeResource TextFillColorTertiaryBrush}"
                                               Visibility="{x:Bind Publisher, Converter={StaticResource StringToVisibilityConverter}}" />
                                </StackPanel>
                            </StackPanel>

                            <!-- Bouton détails -->
                            <Button Grid.Column="3"
                                    Style="{StaticResource SubtleButtonStyle}"
                                    ToolTipService.ToolTip="Voir le chemin du registre"
                                    Click="ShowRegistryPath_Click"
                                    Tag="{x:Bind RegistryPath}"
                                    VerticalAlignment="Center">
                                <FontIcon Glyph="&#xE946;" FontSize="14" />
                            </Button>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <!-- Message quand aucune entrée trouvée -->
        <Grid x:Name="NoResultsPanel" 
              Grid.Row="3"
              VerticalAlignment="Stretch"
              Visibility="Collapsed">
            <StackPanel VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                        Spacing="12">
                <Border Background="{ThemeResource CardBackgroundFillColorSecondaryBrush}"
                        CornerRadius="50"
                        Width="80" Height="80"
                        HorizontalAlignment="Center">
                    <FontIcon Glyph="&#xE8FB;" FontSize="36" 
                              Foreground="{ThemeResource SystemFillColorSuccessBrush}" />
                </Border>
                <TextBlock FontSize="20"
                           FontWeight="SemiBold"
                           Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                           HorizontalAlignment="Center"
                           TextAlignment="Center">
                    <Run Text="Aucune entrée orpheline"/><LineBreak/><Run Text="détectée"/>
                </TextBlock>
                <TextBlock Text="Votre système est propre !"
                           FontSize="12"
                           Foreground="{ThemeResource TextFillColorTertiaryBrush}"
                           HorizontalAlignment="Center"
                           TextAlignment="Center" />
            </StackPanel>
        </Grid>

        <!-- Résumé du nettoyage -->
        <Border x:Name="SummaryPanel" 
                Grid.Row="4" 
                Background="{ThemeResource CardBackgroundFillColorSecondaryBrush}"
                CornerRadius="6"
                Padding="12"
                Margin="0,12,0,0"
                Visibility="Collapsed">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <StackPanel Spacing="4">
                    <TextBlock x:Name="SummaryTitle"
                               FontWeight="SemiBold" />
                    <TextBlock x:Name="SummaryDetails"
                               Style="{StaticResource CaptionTextBlockStyle}"
                               Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                </StackPanel>

                <Button x:Name="RescanButton"
                        Grid.Column="1"
                        Content="Rescanner"
                        Click="RescanButton_Click"
                        VerticalAlignment="Center" />
            </Grid>
        </Border>
    </Grid>
</ContentDialog>
