<?xml version="1.0" encoding="utf-8"?>
<ContentDialog
    x:Class="CleanUninstaller.Views.ResidualScanDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CleanUninstaller.Views"
    xmlns:models="using:CleanUninstaller.Models"
    Title="Résidus détectés"
    PrimaryButtonText="Supprimer la sélection"
    SecondaryButtonText="Fermer"
    DefaultButton="Primary"
    PrimaryButtonClick="DeleteButton_Click"
    Closing="ContentDialog_Closing">

    <Grid MinWidth="600" MinHeight="400" MaxHeight="600">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- En-tête avec info programme -->
        <StackPanel Grid.Row="0" Spacing="4" Margin="0,0,0,12">
            <TextBlock x:Name="ProgramNameText" 
                       Style="{StaticResource SubtitleTextBlockStyle}" />
            <TextBlock x:Name="ScanStatusText" 
                       Style="{StaticResource CaptionTextBlockStyle}"
                       Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
            <!-- InfoBar pour les erreurs de suppression -->
            <InfoBar x:Name="ErrorInfoBar"
                     IsOpen="False"
                     Severity="Warning"
                     IsClosable="True"
                     Margin="0,8,0,0" />
        </StackPanel>

        <!-- Indicateur de scan en cours -->
        <StackPanel x:Name="ScanningPanel" 
                    Grid.Row="1" 
                    VerticalAlignment="Center" 
                    HorizontalAlignment="Center"
                    Spacing="16"
                    Visibility="Collapsed">
            <ProgressRing IsActive="True" Width="48" Height="48" />
            <TextBlock x:Name="ScanningText" 
                       Text="Analyse des résidus en cours..." 
                       HorizontalAlignment="Center" />
        </StackPanel>

        <!-- Liste des résidus -->
        <ListView x:Name="ResidualsListView" 
                  Grid.Row="1"
                  SelectionMode="None"
                  Margin="0,0,0,12">
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="Padding" Value="0" />
                    <Setter Property="Margin" Value="0,2" />
                    <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                </Style>
            </ListView.ItemContainerStyle>
            <ListView.ItemTemplate>
                <DataTemplate x:DataType="models:ResidualItem">
                    <Grid Padding="4,8" ColumnSpacing="8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="4" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <!-- Checkbox de sélection -->
                        <CheckBox Grid.Column="0" 
                                  IsChecked="{x:Bind IsSelected, Mode=TwoWay}"
                                  MinWidth="20"
                                  VerticalAlignment="Center" />

                        <!-- Indicateur de couleur de confiance -->
                        <Border Grid.Column="1" 
                                Width="4" 
                                CornerRadius="2"
                                VerticalAlignment="Stretch"
                                Background="{x:Bind ConfidenceBrush}" />

                        <!-- Icône du type -->
                        <FontIcon Grid.Column="2" 
                                  Glyph="{x:Bind TypeIcon}" 
                                  FontSize="16"
                                  Margin="4,0"
                                  VerticalAlignment="Center" />

                        <!-- Infos de l'élément -->
                        <StackPanel Grid.Column="3" Spacing="2" VerticalAlignment="Center">
                            <TextBlock Text="{x:Bind DisplayPath}" 
                                       TextTrimming="CharacterEllipsis"
                                       ToolTipService.ToolTip="{x:Bind Path}" />
                            <StackPanel Orientation="Horizontal" Spacing="6">
                                <TextBlock Text="{x:Bind TypeName}" 
                                           Style="{StaticResource CaptionTextBlockStyle}"
                                           Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                                <TextBlock Text="•" 
                                           Style="{StaticResource CaptionTextBlockStyle}"
                                           Foreground="{ThemeResource TextFillColorTertiaryBrush}" />
                                <TextBlock Text="{x:Bind ConfidenceText}" 
                                           Style="{StaticResource CaptionTextBlockStyle}"
                                           Foreground="{x:Bind ConfidenceBrush}" />
                            </StackPanel>
                        </StackPanel>

                        <!-- Taille -->
                        <TextBlock Grid.Column="4" 
                                   Text="{x:Bind FormattedSize}" 
                                   VerticalAlignment="Center"
                                   Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                   MinWidth="50"
                                   TextAlignment="Right" />
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <!-- Panneau de confirmation pour éléments risqués -->
        <Border x:Name="WarningConfirmPanel"
                Grid.Row="1"
                Background="{ThemeResource AcrylicBackgroundFillColorDefaultBrush}"
                Visibility="Collapsed">
            <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    CornerRadius="8"
                    Padding="24"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    MaxWidth="400">
                <StackPanel Spacing="16">
                    <FontIcon Glyph="&#xE7BA;" FontSize="32" Foreground="{ThemeResource SystemFillColorCautionBrush}" 
                              HorizontalAlignment="Center" />
                    <TextBlock Text="Attention" Style="{StaticResource SubtitleTextBlockStyle}" 
                               HorizontalAlignment="Center" />
                    <TextBlock x:Name="WarningMessageText"
                               TextWrapping="Wrap"
                               TextAlignment="Center"
                               Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                    <StackPanel Orientation="Horizontal" Spacing="12" HorizontalAlignment="Center">
                        <Button x:Name="ConfirmDeleteButton"
                                Content="Supprimer quand même"
                                Click="ConfirmDelete_Click"
                                Style="{StaticResource AccentButtonStyle}" />
                        <Button Content="Annuler"
                                Click="CancelWarning_Click" />
                    </StackPanel>
                </StackPanel>
            </Border>
        </Border>

        <!-- Légende des couleurs -->
        <Border Grid.Row="2" 
                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                CornerRadius="4"
                Padding="12,8"
                Margin="0,0,0,12">
            <StackPanel Orientation="Horizontal" Spacing="24">
                <StackPanel Orientation="Horizontal" Spacing="6">
                    <Border Width="12" Height="12" CornerRadius="2" Background="#107C10" />
                    <TextBlock Text="Sûr" Style="{StaticResource CaptionTextBlockStyle}" VerticalAlignment="Center" />
                </StackPanel>
                <StackPanel Orientation="Horizontal" Spacing="6">
                    <Border Width="12" Height="12" CornerRadius="2" Background="#FFB900" />
                    <TextBlock Text="Incertain" Style="{StaticResource CaptionTextBlockStyle}" VerticalAlignment="Center" />
                </StackPanel>
                <StackPanel Orientation="Horizontal" Spacing="6">
                    <Border Width="12" Height="12" CornerRadius="2" Background="#D13438" />
                    <TextBlock Text="Risqué" Style="{StaticResource CaptionTextBlockStyle}" VerticalAlignment="Center" />
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Résumé et actions -->
        <Grid Grid.Row="3">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!-- Ligne 1: Boutons de sélection rapide -->
            <StackPanel Grid.Row="0" Orientation="Horizontal" Spacing="8" Margin="0,0,0,8">
                <Button Content="Tout sélectionner" 
                        Click="SelectAll_Click"
                        Style="{StaticResource SubtleButtonStyle}" />
                <Button Content="Sûrs uniquement" 
                        Click="SelectSafeOnly_Click"
                        Style="{StaticResource SubtleButtonStyle}" />
            </StackPanel>

            <!-- Ligne 2: Compteurs -->
            <StackPanel Grid.Row="1" Orientation="Horizontal" Spacing="24">
                <TextBlock Style="{StaticResource CaptionTextBlockStyle}" VerticalAlignment="Center">
                    <Run Text="Éléments sélectionnés: " />
                    <Run x:Name="SelectedCountText" Text="0" FontWeight="SemiBold" />
                </TextBlock>
                <TextBlock Style="{StaticResource BodyStrongTextBlockStyle}" VerticalAlignment="Center">
                    <Run Text="Espace à récupérer: " />
                    <Run x:Name="TotalSizeText" Text="0 o" Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}" />
                </TextBlock>
            </StackPanel>
        </Grid>
    </Grid>
</ContentDialog>
