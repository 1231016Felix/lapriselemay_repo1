{
  "version": 6,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 20,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "windows-base",
      "hidden": true,
      "generator": "Visual Studio 18 2026",
      "binaryDir": "${sourceDir}/build",
      "installDir": "${sourceDir}/install",
      "cacheVariables": {
        "CMAKE_PREFIX_PATH": "C:/Qt/6.10.1/msvc2022_64",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      }
    },
    {
      "name": "x64-debug",
      "displayName": "x64 Debug",
      "description": "Configuration Debug pour Windows x64 avec Qt 6.10.1",
      "inherits": "windows-base",
      "architecture": {
        "value": "x64",
        "strategy": "set"
      },
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "x64-release",
      "displayName": "x64 Release",
      "description": "Configuration Release pour Windows x64 avec Qt 6.10.1",
      "inherits": "windows-base",
      "architecture": {
        "value": "x64",
        "strategy": "set"
      },
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    },
    {
      "name": "x64-relwithdebinfo",
      "displayName": "x64 Release with Debug Info",
      "description": "Release avec symboles de d√©bogage",
      "inherits": "windows-base",
      "architecture": {
        "value": "x64",
        "strategy": "set"
      },
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "RelWithDebInfo"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "x64-debug-build",
      "displayName": "Build Debug",
      "configurePreset": "x64-debug"
    },
    {
      "name": "x64-release-build",
      "displayName": "Build Release",
      "configurePreset": "x64-release"
    },
    {
      "name": "x64-relwithdebinfo-build",
      "displayName": "Build RelWithDebInfo",
      "configurePreset": "x64-relwithdebinfo"
    }
  ]
}
