#pragma code_page(65001)
#include <windows.h>
#include "resource.h"

// Icône de l'application
IDI_TEMPCLEANER ICON "app.ico"

// Menu principal
IDM_MAINMENU MENU
BEGIN
    POPUP "&Fichier"
    BEGIN
        MENUITEM "&Parametres...\tCtrl+P", IDM_SETTINGS
        MENUITEM SEPARATOR
        MENUITEM "&Quitter\tAlt+F4", IDM_EXIT
    END
    POPUP "&Aide"
    BEGIN
        MENUITEM "A &propos...", IDM_ABOUT
    END
END

// Dialogue Paramètres
IDD_SETTINGS DIALOGEX 0, 0, 250, 200
STYLE DS_SETFONT | DS_MODALFRAME | DS_FIXEDSYS | WS_POPUP | WS_CAPTION | WS_SYSMENU
CAPTION "Parametres de nettoyage"
FONT 9, "Segoe UI", 400, 0, 0x1
BEGIN
    GROUPBOX        "Dossiers a nettoyer", -1, 10, 10, 230, 130
    AUTOCHECKBOX    "Dossier temporaire utilisateur (%TEMP%)", IDC_CHK_USER_TEMP, 20, 28, 200, 12
    AUTOCHECKBOX    "Dossier temporaire Windows", IDC_CHK_WINDOWS_TEMP, 20, 44, 200, 12
    AUTOCHECKBOX    "Dossier Prefetch", IDC_CHK_PREFETCH, 20, 60, 200, 12
    AUTOCHECKBOX    "Fichiers recents", IDC_CHK_RECENT, 20, 76, 200, 12
    AUTOCHECKBOX    "Corbeille", IDC_CHK_RECYCLE_BIN, 20, 92, 200, 12
    AUTOCHECKBOX    "Cache des navigateurs", IDC_CHK_BROWSER_CACHE, 20, 108, 200, 12
    
    DEFPUSHBUTTON   "OK", IDC_BTN_OK, 130, 175, 50, 14
    PUSHBUTTON      "Annuler", IDC_BTN_CANCEL, 190, 175, 50, 14
END

// Dialogue A propos
IDD_ABOUT DIALOGEX 0, 0, 200, 80
STYLE DS_SETFONT | DS_MODALFRAME | DS_FIXEDSYS | WS_POPUP | WS_CAPTION | WS_SYSMENU
CAPTION "A propos de TempCleaner"
FONT 9, "Segoe UI", 400, 0, 0x1
BEGIN
    CTEXT           "TempCleaner v1.0", -1, 10, 15, 180, 12
    CTEXT           "Nettoyeur de fichiers temporaires Windows", -1, 10, 30, 180, 12
    CTEXT           "(c) 2025 - Lapriselemay", -1, 10, 45, 180, 12
    DEFPUSHBUTTON   "OK", IDOK, 75, 60, 50, 14
END

// Informations de version
VS_VERSION_INFO VERSIONINFO
FILEVERSION     1,0,0,0
PRODUCTVERSION  1,0,0,0
FILEFLAGSMASK   VS_FFI_FILEFLAGSMASK
FILEFLAGS       0
FILEOS          VOS_NT_WINDOWS32
FILETYPE        VFT_APP
FILESUBTYPE     VFT2_UNKNOWN
BEGIN
    BLOCK "StringFileInfo"
    BEGIN
        BLOCK "040c04b0"
        BEGIN
            VALUE "CompanyName", "Lapriselemay"
            VALUE "FileDescription", "Nettoyeur de fichiers temporaires Windows"
            VALUE "FileVersion", "1.0.0.0"
            VALUE "InternalName", "TempCleaner"
            VALUE "LegalCopyright", "(c) 2025 Lapriselemay"
            VALUE "OriginalFilename", "TempCleaner.exe"
            VALUE "ProductName", "TempCleaner"
            VALUE "ProductVersion", "1.0.0.0"
        END
    END
    BLOCK "VarFileInfo"
    BEGIN
        VALUE "Translation", 0x040c, 1200
    END
END
