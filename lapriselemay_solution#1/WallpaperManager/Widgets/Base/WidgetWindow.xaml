<Window x:Class="WallpaperManager.Widgets.Base.WidgetWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Widget"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ShowInTaskbar="False"
        Topmost="False"
        ResizeMode="CanResizeWithGrip"
        MinWidth="150" MinHeight="100"
        Width="300" Height="200"
        MouseLeftButtonDown="Window_MouseLeftButtonDown"
        Loaded="Window_Loaded"
        SizeChanged="Window_SizeChanged">
    
    <Window.Resources>
        <!-- Style pour le fond avec blur simulé -->
        <Style x:Key="WidgetBorderStyle" TargetType="Border">
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#40FFFFFF"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="20" ShadowDepth="0" Opacity="0.3" Color="Black"/>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Style pour la poignée de redimensionnement -->
        <Style x:Key="ResizeGripStyle" TargetType="Path">
            <Setter Property="Fill" Value="#60FFFFFF"/>
            <Setter Property="Opacity" Value="0.4"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Opacity" Value="0.8"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    
    <Grid x:Name="RootGrid">
        <!-- Fond semi-transparent avec bordure -->
        <Border x:Name="BackgroundBorder" Style="{StaticResource WidgetBorderStyle}">
            <Border.Background>
                <SolidColorBrush x:Name="BackgroundBrush" Color="#1A1A2E" Opacity="0.85"/>
            </Border.Background>
        </Border>
        
        <!-- Contenu du widget -->
        <ContentPresenter x:Name="WidgetContent" Margin="12"/>
        
        <!-- Poignée de redimensionnement en bas à droite -->
        <Path x:Name="ResizeGrip" 
              Style="{StaticResource ResizeGripStyle}"
              Data="M 0,12 L 12,0 M 4,12 L 12,4 M 8,12 L 12,8"
              Stroke="#80FFFFFF"
              StrokeThickness="1.5"
              HorizontalAlignment="Right" 
              VerticalAlignment="Bottom" 
              Margin="0,0,4,4"
              Cursor="SizeNWSE"
              MouseLeftButtonDown="ResizeGrip_MouseLeftButtonDown"/>
    </Grid>
</Window>
