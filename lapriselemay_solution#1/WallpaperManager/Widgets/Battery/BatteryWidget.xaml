<UserControl x:Class="WallpaperManager.Widgets.Battery.BatteryWidget"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:WallpaperManager.Widgets.Battery">
    
    <UserControl.Resources>
        <SolidColorBrush x:Key="WidgetTextPrimary" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="WidgetTextSecondary" Color="#9CA3AF"/>
        <SolidColorBrush x:Key="ProgressBackground" Color="#374151"/>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
        <local:InverseBoolToVisibilityConverter x:Key="InverseBoolToVis"/>
        <local:PercentToWidthConverter x:Key="PercentToWidth"/>
    </UserControl.Resources>
    
    <Viewbox Stretch="Uniform" StretchDirection="Both">
        <Grid MinWidth="160" MinHeight="80" MaxWidth="300" MaxHeight="180">
            <!-- Pas de batterie -->
            <StackPanel Visibility="{Binding HasBattery, Converter={StaticResource InverseBoolToVis}}"
                        HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="ðŸ”Œ" FontSize="32" HorizontalAlignment="Center"/>
                <TextBlock Text="Aucune batterie" FontSize="12" Foreground="{StaticResource WidgetTextSecondary}"
                           HorizontalAlignment="Center" Margin="0,4,0,0"/>
            </StackPanel>
            
            <!-- Contenu batterie -->
            <Grid Visibility="{Binding HasBattery, Converter={StaticResource BoolToVis}}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!-- Titre -->
                <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                    <TextBlock Text="&#xE996;" FontFamily="Segoe MDL2 Assets" FontSize="14" 
                               Foreground="{StaticResource WidgetTextPrimary}" VerticalAlignment="Center" Margin="0,0,6,0"/>
                    <TextBlock Text="Batterie" FontSize="14" FontWeight="SemiBold" 
                               Foreground="{StaticResource WidgetTextPrimary}" VerticalAlignment="Center"/>
                </StackPanel>
                
                <!-- Contenu principal -->
                <Grid Grid.Row="1" Margin="0,4">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Grande icÃ´ne batterie -->
                    <TextBlock Text="{Binding BatteryIcon}" FontSize="40" VerticalAlignment="Center" Margin="0,0,12,0"/>
                    
                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                        <!-- Pourcentage -->
                        <StackPanel Orientation="Horizontal">
                            <TextBlock FontSize="28" FontWeight="Light">
                                <TextBlock.Text>
                                    <Binding Path="BatteryPercent"/>
                                </TextBlock.Text>
                                <TextBlock.Foreground>
                                    <SolidColorBrush Color="{Binding BatteryColor}"/>
                                </TextBlock.Foreground>
                            </TextBlock>
                            <TextBlock Text="%" FontSize="18" FontWeight="Light" VerticalAlignment="Bottom" Margin="0,0,0,4">
                                <TextBlock.Foreground>
                                    <SolidColorBrush Color="{Binding BatteryColor}"/>
                                </TextBlock.Foreground>
                            </TextBlock>
                        </StackPanel>
                        
                        <!-- Barre de progression -->
                        <Grid Height="6" Margin="0,4,0,0">
                            <Border Background="{StaticResource ProgressBackground}" CornerRadius="3"/>
                            <Border CornerRadius="3" HorizontalAlignment="Left">
                                <Border.Background>
                                    <SolidColorBrush Color="{Binding BatteryColor}"/>
                                </Border.Background>
                                <Border.Width>
                                    <MultiBinding Converter="{StaticResource PercentToWidth}">
                                        <Binding Path="BatteryPercent"/>
                                        <Binding Path="ActualWidth" RelativeSource="{RelativeSource AncestorType=Grid}"/>
                                    </MultiBinding>
                                </Border.Width>
                            </Border>
                        </Grid>
                        
                        <!-- Statut -->
                        <TextBlock Text="{Binding StatusText}" FontSize="11" 
                                   Foreground="{StaticResource WidgetTextSecondary}" Margin="0,4,0,0"/>
                    </StackPanel>
                </Grid>
                
                <!-- Temps restant -->
                <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,4,0,0">
                    <TextBlock Text="â± " FontSize="11" Foreground="{StaticResource WidgetTextSecondary}"/>
                    <TextBlock Text="{Binding TimeRemaining}" FontSize="11" Foreground="{StaticResource WidgetTextPrimary}"/>
                </StackPanel>
            </Grid>
        </Grid>
    </Viewbox>
</UserControl>
