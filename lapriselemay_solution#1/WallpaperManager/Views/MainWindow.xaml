<Window x:Class="WallpaperManager.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:WallpaperManager.ViewModels"
        xmlns:conv="clr-namespace:WallpaperManager.Converters"
        Title="Wallpaper Manager" 
        Height="650" Width="950"
        MinHeight="500" MinWidth="750"
        Background="{StaticResource BackgroundBrush}"
        WindowStartupLocation="CenterScreen"
        WindowState="Normal"
        ResizeMode="CanResizeWithGrip"
        Icon="/Resources/app.ico"
        Loaded="Window_Loaded">
    
    <Window.Resources>
        <conv:BoolToVisibilityConverter x:Key="BoolToVis"/>
        <conv:PathToThumbnailConverter x:Key="PathToThumb"/>
        <conv:UnsplashUrlToImageConverter x:Key="UrlToImage"/>
        <conv:WallpaperTypeToIconConverter x:Key="TypeToIcon"/>
        <conv:NullToVisibilityConverter x:Key="NullToVis"/>
    </Window.Resources>
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="240"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <!-- Sidebar -->
        <Border Grid.Column="0" Background="{StaticResource SurfaceBrush}" Padding="4,0,0,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!-- Logo/Titre -->
                <StackPanel Grid.Row="0" Margin="20,20,16,20">
                    <TextBlock Text="üé® Wallpaper" FontSize="22" FontWeight="Bold" 
                               Foreground="{StaticResource TextPrimaryBrush}"/>
                    <TextBlock Text="Manager" FontSize="22" FontWeight="Light" 
                               Foreground="{StaticResource PrimaryBrush}" Margin="0,-4,0,0"/>
                </StackPanel>
                
                <!-- Menu -->
                <StackPanel Grid.Row="1" Margin="12,0,8,0">
                    <RadioButton x:Name="tabLibrary" Content="üìö  Biblioth√®que" IsChecked="True"
                                 Style="{StaticResource {x:Type ToggleButton}}" Margin="0,4"
                                 Foreground="{StaticResource TextPrimaryBrush}" FontSize="14"
                                 Padding="12,10" HorizontalContentAlignment="Left" Cursor="Hand"/>
                    <RadioButton x:Name="tabUnsplash" Content="üåê  Unsplash"
                                 Style="{StaticResource {x:Type ToggleButton}}" Margin="0,4"
                                 Foreground="{StaticResource TextPrimaryBrush}" FontSize="14"
                                 Padding="12,10" HorizontalContentAlignment="Left" Cursor="Hand"/>
                    <RadioButton x:Name="tabCollections" Content="üìÅ  Collections"
                                 Style="{StaticResource {x:Type ToggleButton}}" Margin="0,4"
                                 Foreground="{StaticResource TextPrimaryBrush}" FontSize="14"
                                 Padding="12,10" HorizontalContentAlignment="Left" Cursor="Hand"/>
                    <RadioButton x:Name="tabSettings" Content="‚öôÔ∏è  Param√®tres"
                                 Style="{StaticResource {x:Type ToggleButton}}" Margin="0,4"
                                 Foreground="{StaticResource TextPrimaryBrush}" FontSize="14"
                                 Padding="12,10" HorizontalContentAlignment="Left" Cursor="Hand"/>
                    
                    <Separator Margin="8,16" Background="{StaticResource BorderBrush}"/>
                    
                    <!-- Contr√¥les rotation -->
                    <TextBlock Text="Rotation automatique" FontSize="12" 
                               Foreground="{StaticResource TextSecondaryBrush}" Margin="12,8,12,4"/>
                    
                    <ToggleButton IsChecked="{Binding IsRotationEnabled, Mode=TwoWay}" Margin="12,4,8,4"
                                  Padding="12,8" Cursor="Hand">
                        <ToggleButton.Style>
                            <Style TargetType="ToggleButton">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="ToggleButton">
                                            <Border x:Name="border" Background="{StaticResource CardBrush}" 
                                                    CornerRadius="8" Padding="12,8">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>
                                                    <TextBlock x:Name="label" Text="D√©sactiv√©" Foreground="{StaticResource TextPrimaryBrush}"/>
                                                    <Border Grid.Column="1" Width="44" Height="24" CornerRadius="12"
                                                            Background="{StaticResource BorderBrush}" x:Name="toggle">
                                                        <Ellipse Width="20" Height="20" Fill="White" 
                                                                 HorizontalAlignment="Left" Margin="2,0" x:Name="dot"/>
                                                    </Border>
                                                </Grid>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsChecked" Value="True">
                                                    <Setter TargetName="toggle" Property="Background" Value="{StaticResource PrimaryBrush}"/>
                                                    <Setter TargetName="dot" Property="HorizontalAlignment" Value="Right"/>
                                                    <Setter TargetName="label" Property="Text" Value="Activ√©"/>
                                                    <Setter TargetName="label" Property="Foreground" Value="{StaticResource PrimaryBrush}"/>
                                                </Trigger>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="border" Property="Background" Value="{StaticResource SurfaceBrush}"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </ToggleButton.Style>
                    </ToggleButton>
                    
                    <!-- Boutons Pr√©c√©dent/Suivant -->
                    <TextBlock Text="Changer de fond" FontSize="12" 
                               Foreground="{StaticResource TextSecondaryBrush}" Margin="12,12,12,4"/>
                    
                    <StackPanel Orientation="Horizontal" Margin="12,4" HorizontalAlignment="Left">
                        <Button Content="‚óÄ" Command="{Binding PreviousWallpaperCommand}" 
                                Width="36" Height="36" Style="{StaticResource PrimaryButton}"
                                Padding="0" Margin="0,0,4,0"
                                ToolTip="Fond d'√©cran pr√©c√©dent"/>
                        <Button Content="‚ñ∂" Command="{Binding NextWallpaperCommand}" 
                                Width="36" Height="36" Style="{StaticResource PrimaryButton}"
                                Padding="0"
                                ToolTip="Fond d'√©cran suivant"/>
                    </StackPanel>
                </StackPanel>
                
                <!-- Status -->
                <Border Grid.Row="2" Background="{StaticResource CardBrush}" Margin="12,8" 
                        CornerRadius="8" Padding="12,8">
                    <TextBlock Text="{Binding StatusMessage}" FontSize="11" 
                               Foreground="{StaticResource TextSecondaryBrush}" TextWrapping="Wrap"/>
                </Border>
            </Grid>
        </Border>

        <!-- Contenu principal -->
        <Grid Grid.Column="1" Margin="20">
            <!-- Biblioth√®que -->
            <Grid Visibility="{Binding IsChecked, ElementName=tabLibrary, Converter={StaticResource BoolToVis}}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!-- Header -->
                <Grid Grid.Row="0" Margin="0,0,0,16">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Text="Ma biblioth√®que" FontSize="24" FontWeight="Bold" 
                               Foreground="{StaticResource TextPrimaryBrush}"/>
                    
                    <Button Grid.Column="1" Content="+ Ajouter" Style="{StaticResource PrimaryButton}"
                            Command="{Binding AddWallpapersCommand}"/>
                </Grid>
                
                <!-- Grille de fonds d'√©cran -->
                <ListBox Grid.Row="1" ItemsSource="{Binding Wallpapers}" 
                         SelectedItem="{Binding SelectedWallpaper}"
                         Background="Transparent" BorderThickness="0"
                         ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                    <ListBox.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel/>
                        </ItemsPanelTemplate>
                    </ListBox.ItemsPanel>
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Border Width="180" Height="120" Margin="4" CornerRadius="8"
                                    Background="{StaticResource CardBrush}" Cursor="Hand">
                                <Grid>
                                    <Image Source="{Binding FilePath, Converter={StaticResource PathToThumb}}"
                                           Stretch="UniformToFill"/>
                                    <Border Background="#80000000" VerticalAlignment="Bottom" 
                                            CornerRadius="0,0,8,8" Padding="8,4">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Text="{Binding Type, Converter={StaticResource TypeToIcon}}" 
                                                       FontSize="12" Margin="0,0,4,0"/>
                                            <TextBlock Grid.Column="1" Text="{Binding DisplayName}" FontSize="11"
                                                       Foreground="White" TextTrimming="CharacterEllipsis"/>
                                        </Grid>
                                    </Border>
                                    <Border Background="{StaticResource PrimaryBrush}" 
                                            HorizontalAlignment="Right" VerticalAlignment="Top"
                                            CornerRadius="0,8,0,8" Padding="6,2"
                                            Visibility="{Binding IsFavorite, Converter={StaticResource BoolToVis}}">
                                        <TextBlock Text="‚òÖ" Foreground="White" FontSize="10"/>
                                    </Border>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
                
                <!-- Panneau d'actions -->
                <Border Grid.Row="2" Style="{StaticResource CardStyle}" Margin="0,16,0,0"
                        Visibility="{Binding SelectedWallpaper, Converter={StaticResource NullToVis}}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <Image Source="{Binding SelectedWallpaper.FilePath, Converter={StaticResource PathToThumb}}"
                               Width="100" Height="60" Stretch="UniformToFill" Margin="0,0,16,0"/>
                        
                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                            <TextBlock Text="{Binding SelectedWallpaper.DisplayName}" FontSize="14" FontWeight="SemiBold"
                                       Foreground="{StaticResource TextPrimaryBrush}"/>
                            <TextBlock FontSize="12" Foreground="{StaticResource TextSecondaryBrush}">
                                <Run Text="{Binding SelectedWallpaper.Resolution}"/> ‚Ä¢ 
                                <Run Text="{Binding SelectedWallpaper.FileSizeFormatted}"/>
                            </TextBlock>
                        </StackPanel>
                        
                        <StackPanel Grid.Column="2" Orientation="Horizontal">
                            <Button Content="‚òÖ" Command="{Binding ToggleFavoriteCommand}"
                                    Width="36" Height="36" Margin="0,0,8,0"
                                    Style="{StaticResource PrimaryButton}" Padding="0"/>
                            <Button Content="Appliquer" Command="{Binding ApplyWallpaperCommand}"
                                    Style="{StaticResource PrimaryButton}" Margin="0,0,8,0"/>
                            <Button Content="üóëÔ∏è" Command="{Binding RemoveWallpaperCommand}"
                                    Width="36" Height="36" Background="#EF4444"
                                    Style="{StaticResource PrimaryButton}" Padding="0"/>
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>

            <!-- Unsplash -->
            <Grid Visibility="{Binding IsChecked, ElementName=tabUnsplash, Converter={StaticResource BoolToVis}}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <TextBlock Text="Unsplash" FontSize="24" FontWeight="Bold" 
                           Foreground="{StaticResource TextPrimaryBrush}" Margin="0,0,0,16"/>
                
                <!-- Barre de recherche -->
                <Grid Grid.Row="1" Margin="0,0,0,16">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBox Text="{Binding UnsplashSearchQuery, UpdateSourceTrigger=PropertyChanged}"
                             Style="{StaticResource ModernTextBox}"
                             Tag="Rechercher sur Unsplash..."/>
                    
                    <Button Grid.Column="1" Content="üîç Rechercher" 
                            Command="{Binding SearchUnsplashCommand}"
                            Style="{StaticResource PrimaryButton}" Margin="8,0"/>
                    
                    <Button Grid.Column="2" Content="üé≤ Al√©atoire" 
                            Command="{Binding LoadRandomUnsplashCommand}"
                            Style="{StaticResource PrimaryButton}"/>
                </Grid>
                
                <!-- R√©sultats -->
                <ListBox Grid.Row="2" ItemsSource="{Binding UnsplashPhotos}"
                         Background="Transparent" BorderThickness="0"
                         ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                    <ListBox.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel/>
                        </ItemsPanelTemplate>
                    </ListBox.ItemsPanel>
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Border Width="220" Height="140" Margin="4" CornerRadius="8"
                                    Background="{StaticResource CardBrush}" Cursor="Hand">
                                <Grid>
                                    <Image Source="{Binding Urls.Small, Converter={StaticResource UrlToImage}}"
                                           Stretch="UniformToFill"/>
                                    <Border Background="#80000000" VerticalAlignment="Bottom" 
                                            CornerRadius="0,0,8,8" Padding="8,6">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>
                                            <TextBlock Text="{Binding User.Name}" FontSize="11"
                                                       Foreground="White" TextTrimming="CharacterEllipsis"/>
                                            <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,4,0,0">
                                                <Button Content="‚¨áÔ∏è" FontSize="10" Padding="8,2" Margin="0,0,4,0"
                                                        Command="{Binding DataContext.DownloadUnsplashPhotoCommand, 
                                                                  RelativeSource={RelativeSource AncestorType=ListBox}}"
                                                        CommandParameter="{Binding}"
                                                        Style="{StaticResource PrimaryButton}"/>
                                                <Button Content="Appliquer" FontSize="10" Padding="8,2"
                                                        Command="{Binding DataContext.DownloadAndApplyUnsplashPhotoCommand, 
                                                                  RelativeSource={RelativeSource AncestorType=ListBox}}"
                                                        CommandParameter="{Binding}"
                                                        Style="{StaticResource PrimaryButton}"/>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
                
                <!-- Message si pas de cl√© API -->
                <Border Grid.Row="2" Style="{StaticResource CardStyle}" 
                        HorizontalAlignment="Center" VerticalAlignment="Center"
                        Visibility="{Binding UnsplashApiKey, Converter={StaticResource NullToVis}, ConverterParameter=Invert}">
                    <StackPanel>
                        <TextBlock Text="üîë Cl√© API requise" FontSize="16" FontWeight="SemiBold"
                                   Foreground="{StaticResource TextPrimaryBrush}" HorizontalAlignment="Center"/>
                        <TextBlock Text="Configurez votre cl√© API Unsplash dans les param√®tres" 
                                   FontSize="12" Foreground="{StaticResource TextSecondaryBrush}"
                                   HorizontalAlignment="Center" Margin="0,8,0,0"/>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- Collections -->
            <Grid Visibility="{Binding IsChecked, ElementName=tabCollections, Converter={StaticResource BoolToVis}}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="250"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <Grid Grid.ColumnSpan="2" Margin="0,0,0,16">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Collections" FontSize="24" FontWeight="Bold" 
                               Foreground="{StaticResource TextPrimaryBrush}"/>
                    <Button Grid.Column="1" Content="+ Nouvelle" Style="{StaticResource PrimaryButton}"
                            Command="{Binding CreateCollectionCommand}"/>
                </Grid>
                
                <!-- Liste des collections -->
                <Border Grid.Row="1" Style="{StaticResource CardStyle}" Margin="0,0,16,0">
                    <ListBox ItemsSource="{Binding Collections}" SelectedItem="{Binding SelectedCollection}"
                             Background="Transparent" BorderThickness="0">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border Padding="8" Margin="2" CornerRadius="6" Background="{StaticResource SurfaceBrush}">
                                    <StackPanel>
                                        <TextBlock Text="{Binding Name}" FontSize="14" FontWeight="SemiBold"
                                                   Foreground="{StaticResource TextPrimaryBrush}"/>
                                        <TextBlock FontSize="11" Foreground="{StaticResource TextSecondaryBrush}">
                                            <Run Text="{Binding WallpaperIds.Count, Mode=OneWay}"/> fond(s) d'√©cran
                                        </TextBlock>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Border>
                
                <!-- D√©tails collection -->
                <Border Grid.Row="1" Grid.Column="1" Style="{StaticResource CardStyle}"
                        Visibility="{Binding SelectedCollection, Converter={StaticResource NullToVis}}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <StackPanel>
                            <TextBox Text="{Binding SelectedCollection.Name, UpdateSourceTrigger=PropertyChanged}"
                                     Style="{StaticResource ModernTextBox}" FontSize="18" FontWeight="SemiBold"/>
                            <TextBox Text="{Binding SelectedCollection.Description, UpdateSourceTrigger=PropertyChanged}"
                                     Style="{StaticResource ModernTextBox}" Margin="0,8,0,0"
                                     Tag="Description (optionnel)"/>
                        </StackPanel>
                        
                        <TextBlock Grid.Row="1" Text="S√©lectionnez un fond d'√©cran dans la biblioth√®que puis cliquez sur 'Ajouter √† la collection'"
                                   Foreground="{StaticResource TextSecondaryBrush}" FontSize="12"
                                   VerticalAlignment="Center" HorizontalAlignment="Center" TextWrapping="Wrap"
                                   TextAlignment="Center" Margin="20"/>
                        
                        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
                            <Button Content="Utiliser pour rotation" Command="{Binding SetActiveCollectionCommand}"
                                    Style="{StaticResource PrimaryButton}" Margin="0,0,8,0"/>
                            <Button Content="üóëÔ∏è Supprimer" Command="{Binding DeleteCollectionCommand}"
                                    Background="#EF4444" Style="{StaticResource PrimaryButton}"/>
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>

            <!-- Param√®tres -->
            <ScrollViewer Visibility="{Binding IsChecked, ElementName=tabSettings, Converter={StaticResource BoolToVis}}"
                          VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <TextBlock Text="Param√®tres" FontSize="24" FontWeight="Bold" 
                               Foreground="{StaticResource TextPrimaryBrush}" Margin="0,0,0,20"/>
                    
                    <!-- G√©n√©ral -->
                    <Border Style="{StaticResource CardStyle}" Margin="0,0,0,16">
                        <StackPanel>
                            <TextBlock Text="G√©n√©ral" FontSize="16" FontWeight="SemiBold"
                                       Foreground="{StaticResource TextPrimaryBrush}" Margin="0,0,0,12"/>
                            
                            <CheckBox Content="D√©marrer avec Windows" IsChecked="{Binding StartWithWindows}"
                                      Foreground="{StaticResource TextPrimaryBrush}" Margin="0,8"/>
                            <CheckBox Content="Minimiser dans la barre des t√¢ches" IsChecked="{Binding MinimizeToTray}"
                                      Foreground="{StaticResource TextPrimaryBrush}" Margin="0,8"/>
                        </StackPanel>
                    </Border>
                    
                    <!-- Rotation -->
                    <Border Style="{StaticResource CardStyle}" Margin="0,0,0,16">
                        <StackPanel>
                            <TextBlock Text="Rotation automatique" FontSize="16" FontWeight="SemiBold"
                                       Foreground="{StaticResource TextPrimaryBrush}" Margin="0,0,0,12"/>
                            
                            <Grid Margin="0,8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Intervalle (minutes)" Foreground="{StaticResource TextPrimaryBrush}"
                                           VerticalAlignment="Center"/>
                                <TextBox Grid.Column="1" Text="{Binding RotationInterval}" Width="80"
                                         Style="{StaticResource ModernTextBox}" TextAlignment="Center"/>
                            </Grid>
                        </StackPanel>
                    </Border>
                    
                    <!-- Unsplash -->
                    <Border Style="{StaticResource CardStyle}" Margin="0,0,0,16">
                        <StackPanel>
                            <TextBlock Text="Unsplash API" FontSize="16" FontWeight="SemiBold"
                                       Foreground="{StaticResource TextPrimaryBrush}" Margin="0,0,0,12"/>
                            
                            <TextBlock Text="Cl√© API (Access Key)" Foreground="{StaticResource TextSecondaryBrush}" 
                                       FontSize="12" Margin="0,0,0,4"/>
                            <TextBox Text="{Binding UnsplashApiKey, UpdateSourceTrigger=PropertyChanged}"
                                     Style="{StaticResource ModernTextBox}"/>
                            
                            <TextBlock Margin="0,8,0,0" FontSize="11" Foreground="{StaticResource TextSecondaryBrush}"
                                       TextWrapping="Wrap">
                                Obtenez une cl√© gratuite sur unsplash.com/developers
                            </TextBlock>
                        </StackPanel>
                    </Border>
                    
                    <!-- Fonds anim√©s -->
                    <Border Style="{StaticResource CardStyle}" Margin="0,0,0,16">
                        <StackPanel>
                            <TextBlock Text="Fonds d'√©cran anim√©s" FontSize="16" FontWeight="SemiBold"
                                       Foreground="{StaticResource TextPrimaryBrush}" Margin="0,0,0,12"/>
                            
                            <Button Content="Arr√™ter le fond anim√© actuel" Command="{Binding StopAnimatedWallpaperCommand}"
                                    Style="{StaticResource PrimaryButton}" HorizontalAlignment="Left"/>
                            
                            <TextBlock Margin="0,12,0,0" FontSize="11" Foreground="{StaticResource TextSecondaryBrush}"
                                       TextWrapping="Wrap">
                                Les fonds d'√©cran vid√©o et GIF anim√©s n√©cessitent VLC Media Player install√©.
                            </TextBlock>
                        </StackPanel>
                    </Border>
                    
                    <!-- √Ä propos -->
                    <Border Style="{StaticResource CardStyle}">
                        <StackPanel>
                            <TextBlock Text="√Ä propos" FontSize="16" FontWeight="SemiBold"
                                       Foreground="{StaticResource TextPrimaryBrush}" Margin="0,0,0,12"/>
                            <TextBlock Text="Wallpaper Manager v1.0.0" Foreground="{StaticResource TextPrimaryBrush}"/>
                            <TextBlock Text="Gestionnaire de fonds d'√©cran avec rotation automatique" 
                                       Foreground="{StaticResource TextSecondaryBrush}" FontSize="12"/>
                            <TextBlock Text="¬© 2025 Felix-Antoine" 
                                       Foreground="{StaticResource TextSecondaryBrush}" FontSize="12" Margin="0,4,0,0"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </ScrollViewer>
        </Grid>
        
        <!-- Loading overlay -->
        <Border Background="#80000000" Visibility="{Binding IsLoading, Converter={StaticResource BoolToVis}}"
                Grid.ColumnSpan="2">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="‚è≥" FontSize="48" HorizontalAlignment="Center"/>
                <TextBlock Text="{Binding StatusMessage}" Foreground="White" FontSize="14" 
                           HorizontalAlignment="Center" Margin="0,8,0,0"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
