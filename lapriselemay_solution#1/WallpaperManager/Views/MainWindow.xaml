<Window x:Class="WallpaperManager.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:WallpaperManager.ViewModels"
        xmlns:conv="clr-namespace:WallpaperManager.Converters"
        xmlns:models="clr-namespace:WallpaperManager.Models"
        xmlns:sys="clr-namespace:System;assembly=System.Runtime"
        xmlns:controls="clr-namespace:WallpaperManager.Controls"
        Title="Wallpaper Manager" 
        Height="700" Width="1050"
        MinHeight="550" MinWidth="850"
        Background="{StaticResource BackgroundBrush}"
        FontFamily="Segoe UI"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        ResizeMode="CanResize"
        Icon="/Resources/app.ico"
        Loaded="Window_Loaded"
        AllowDrop="True"
        Drop="Window_Drop"
        DragOver="Window_DragOver">
    
    <Window.Resources>
        <conv:BoolToVisibilityConverter x:Key="BoolToVis"/>
        <conv:PathToThumbnailConverter x:Key="PathToThumb"/>
        <conv:AsyncThumbnailConverter x:Key="AsyncThumb"/>
        <conv:UnsplashUrlToImageConverter x:Key="UrlToImage"/>
        <conv:WallpaperTypeToIconConverter x:Key="TypeToIcon"/>
        <conv:WallpaperTypeToVisibilityConverter x:Key="TypeToVis"/>
        <conv:NullToVisibilityConverter x:Key="NullToVis"/>
        <conv:InverseBoolConverter x:Key="InverseBoolConverter"/>
        <conv:CountToVisibilityConverter x:Key="CountToVisibilityConverter"/>
        <conv:MultiSelectToVisibilityConverter x:Key="MultiSelectToVis"/>
        <!-- Converters pour section Dynamiques -->
        <conv:IsActiveDynamicConverter x:Key="IsActiveDynamicConverter"/>
        <conv:TimelinePositionConverter x:Key="TimelinePositionConverter"/>
        <conv:FloorConverter x:Key="FloorConverter"/>
        <conv:FractionToMinutesConverter x:Key="FractionToMinutesConverter"/>
    </Window.Resources>
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="240"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <!-- Sidebar -->
        <Border Grid.Column="0" Background="{StaticResource SurfaceBrush}" Padding="4,0,0,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <StackPanel Grid.Row="0" Margin="20,20,16,20">
                    <TextBlock Text="üé® Wallpaper" FontSize="22" FontWeight="Bold" Foreground="{StaticResource TextPrimaryBrush}"/>
                    <TextBlock Text="Manager" FontSize="22" FontWeight="Light" Foreground="{StaticResource PrimaryBrush}" Margin="0,-4,0,0"/>
                </StackPanel>
                
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                <StackPanel Margin="12,0,8,0">
                    <RadioButton x:Name="tabLibrary" Content="üìö  Biblioth√®que" IsChecked="True"
                                 Style="{StaticResource NavTabStyle}" Margin="0,4"/>
                    <RadioButton x:Name="tabCollections" Content="üìÇ  Collections"
                                 Style="{StaticResource NavTabStyle}" Margin="0,4"/>
                    <RadioButton x:Name="tabDynamic" Content="üåÖ  Dynamiques"
                                 Style="{StaticResource NavTabStyle}" Margin="0,4"/>
                    <RadioButton x:Name="tabWidgets" Content="üñ•Ô∏è  Widgets"
                                 Style="{StaticResource NavTabStyle}" Margin="0,4"/>
                    
                    <Separator Margin="8,12" Background="{StaticResource BorderBrush}"/>
                    <TextBlock Text="SOURCES EN LIGNE" FontSize="10" Foreground="{StaticResource TextSecondaryBrush}" Margin="12,0,0,4" FontWeight="SemiBold"/>
                    
                    <RadioButton x:Name="tabUnsplash" Style="{StaticResource NavTabStyle}" Margin="0,4">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="üåê  Unsplash"/>
                            <Ellipse Width="8" Height="8" Margin="8,0,0,0" VerticalAlignment="Center">
                                <Ellipse.Style>
                                    <Style TargetType="Ellipse">
                                        <Setter Property="Fill" Value="#EF4444"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsUnsplashConfigured}" Value="True">
                                                <Setter Property="Fill" Value="#22C55E"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Ellipse.Style>
                            </Ellipse>
                        </StackPanel>
                    </RadioButton>
                    <RadioButton x:Name="tabPexels" Style="{StaticResource NavTabStyle}" Margin="0,4">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="üì∑  Pexels"/>
                            <Ellipse Width="8" Height="8" Margin="8,0,0,0" VerticalAlignment="Center">
                                <Ellipse.Style>
                                    <Style TargetType="Ellipse">
                                        <Setter Property="Fill" Value="#EF4444"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsPexelsConfigured}" Value="True">
                                                <Setter Property="Fill" Value="#22C55E"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Ellipse.Style>
                            </Ellipse>
                        </StackPanel>
                    </RadioButton>
                    <RadioButton x:Name="tabPixabay" Style="{StaticResource NavTabStyle}" Margin="0,4">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="üñºÔ∏è  Pixabay"/>
                            <Ellipse Width="8" Height="8" Margin="8,0,0,0" VerticalAlignment="Center">
                                <Ellipse.Style>
                                    <Style TargetType="Ellipse">
                                        <Setter Property="Fill" Value="#EF4444"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsPixabayConfigured}" Value="True">
                                                <Setter Property="Fill" Value="#22C55E"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Ellipse.Style>
                            </Ellipse>
                        </StackPanel>
                    </RadioButton>
                    
                    <Separator Margin="8,12" Background="{StaticResource BorderBrush}"/>
                    
                    <RadioButton x:Name="tabSettings" Content="‚öôÔ∏è  Param√®tres"
                                 Style="{StaticResource NavTabStyle}" Margin="0,4"/>
                    
                    <Separator Margin="8,16" Background="{StaticResource BorderBrush}"/>
                    
                    <!-- Section visible uniquement sur l'onglet Biblioth√®que -->
                    <StackPanel Visibility="{Binding IsChecked, ElementName=tabLibrary, Converter={StaticResource BoolToVis}}">
                        <TextBlock Text="Rotation automatique" FontSize="12" Foreground="{StaticResource TextSecondaryBrush}" Margin="12,8,12,4"/>
                        
                        <ToggleButton IsChecked="{Binding IsRotationEnabled, Mode=TwoWay}" IsEnabled="{Binding IsRotationToggleEnabled}" Margin="12,4,8,4" Padding="12,8" Cursor="Hand">
                            <ToggleButton.Style>
                                <Style TargetType="ToggleButton">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="ToggleButton">
                                                <Border x:Name="border" Background="{StaticResource CardBrush}" CornerRadius="8" Padding="12,8" Opacity="1">
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="*"/>
                                                            <ColumnDefinition Width="Auto"/>
                                                        </Grid.ColumnDefinitions>
                                                        <TextBlock x:Name="label" Text="D√©sactiv√©" Foreground="{StaticResource TextPrimaryBrush}"/>
                                                        <Border Grid.Column="1" Width="44" Height="24" CornerRadius="12" Background="{StaticResource BorderBrush}" x:Name="toggle">
                                                            <Ellipse Width="20" Height="20" Fill="White" HorizontalAlignment="Left" Margin="2,0" x:Name="dot"/>
                                                        </Border>
                                                    </Grid>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsChecked" Value="True">
                                                        <Setter TargetName="toggle" Property="Background" Value="{StaticResource PrimaryBrush}"/>
                                                        <Setter TargetName="dot" Property="HorizontalAlignment" Value="Right"/>
                                                        <Setter TargetName="label" Property="Text" Value="Activ√©"/>
                                                        <Setter TargetName="label" Property="Foreground" Value="{StaticResource PrimaryBrush}"/>
                                                    </Trigger>
                                                    <Trigger Property="IsEnabled" Value="False">
                                                        <Setter TargetName="border" Property="Opacity" Value="0.5"/>
                                                        <Setter TargetName="label" Property="Text" Value="Bloqu√©"/>
                                                        <Setter TargetName="label" Property="Foreground" Value="{StaticResource TextSecondaryBrush}"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </ToggleButton.Style>
                        </ToggleButton>
                        
                        <!-- Avertissement rotation intelligente active -->
                        <TextBlock Text="‚ö†Ô∏è Rotation intelligente active" FontSize="10" Foreground="#F59E0B" Margin="12,2,12,0" TextWrapping="Wrap"
                                   Visibility="{Binding SmartRotationEnabled, Converter={StaticResource BoolToVis}}"
                                   ToolTip="D√©sactivez la rotation intelligente dans l'onglet Dynamiques pour r√©activer la rotation automatique"/>
                        
                        <TextBlock Text="Changer de fond" FontSize="12" Foreground="{StaticResource TextSecondaryBrush}" Margin="12,12,12,4"/>
                        
                        <StackPanel Orientation="Horizontal" Margin="12,4" HorizontalAlignment="Left">
                            <Button Content="‚óÄ" Command="{Binding PreviousWallpaperCommand}" Width="36" Height="36" Style="{StaticResource PrimaryButton}" Padding="0" Margin="0,0,4,0" ToolTip="Pr√©c√©dent"/>
                            <Button Content="‚ñ∂" Command="{Binding NextWallpaperCommand}" Width="36" Height="36" Style="{StaticResource PrimaryButton}" Padding="0" ToolTip="Suivant"/>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
                </ScrollViewer>
                
                <Border Grid.Row="2" Background="{StaticResource CardBrush}" Margin="12,8" CornerRadius="8" Padding="12,8">
                    <TextBlock Text="{Binding StatusMessage}" FontSize="11" Foreground="{StaticResource TextSecondaryBrush}" TextWrapping="Wrap"/>
                </Border>
            </Grid>
        </Border>

        <!-- Contenu principal -->
        <Grid Grid.Column="1" Margin="20">
            
            <!-- BIBLIOTH√àQUE -->
            <Grid Visibility="{Binding IsChecked, ElementName=tabLibrary, Converter={StaticResource BoolToVis}}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <Grid Grid.Row="0" Margin="0,0,0,12">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Ma biblioth√®que" FontSize="24" FontWeight="Bold" Foreground="{StaticResource TextPrimaryBrush}" VerticalAlignment="Center"/>
                        <TextBlock FontSize="14" Foreground="{StaticResource TextSecondaryBrush}" VerticalAlignment="Center" Margin="12,0,0,0">
                            <Run Text="{Binding FilteredCount, Mode=OneWay}"/>/<Run Text="{Binding TotalCount, Mode=OneWay}"/>
                        </TextBlock>
                    </StackPanel>
                    <Button Grid.Column="1" Content="+ Ajouter" Style="{StaticResource PrimaryButton}" Command="{Binding AddWallpapersCommand}"/>
                </Grid>
                
                <!-- Filtres -->
                <Border Grid.Row="1" Style="{StaticResource CardStyle}" Padding="6" Margin="0,0,0,12">
                    <Grid Height="26">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Grid>
                            <TextBox x:Name="SearchBox" Text="{Binding SearchQuery, UpdateSourceTrigger=PropertyChanged}">
                                <TextBox.Style>
                                    <Style TargetType="TextBox">
                                        <Setter Property="Background" Value="#1A1A2E"/>
                                        <Setter Property="Foreground" Value="White"/>
                                        <Setter Property="BorderBrush" Value="#374151"/>
                                        <Setter Property="BorderThickness" Value="1"/>
                                        <Setter Property="FontFamily" Value="Segoe UI"/>
                                        <Setter Property="FontSize" Value="13"/>
                                        <Setter Property="Padding" Value="8,4"/>
                                        <Setter Property="VerticalContentAlignment" Value="Center"/>
                                        <Setter Property="Margin" Value="0,0,8,0"/>
                                    </Style>
                                </TextBox.Style>
                            </TextBox>
                            <TextBlock Text="üîç Rechercher..." 
                                       Foreground="#9CA3AF" 
                                       FontSize="13" 
                                       VerticalAlignment="Center" 
                                       Margin="10,0,0,0" 
                                       IsHitTestVisible="False"
                                       Visibility="{Binding Text, ElementName=SearchBox, Converter={StaticResource NullToVis}, ConverterParameter=Invert}"/>
                        </Grid>
                        <CheckBox Grid.Column="1" Content="‚òÖ Favoris" IsChecked="{Binding FilterFavoritesOnly}" Foreground="{StaticResource TextPrimaryBrush}" VerticalAlignment="Center" Margin="0,0,12,0" FontSize="13"/>
                        <ComboBox Grid.Column="2" ItemsSource="{Binding SortOptions}" SelectedItem="{Binding SortBy}" Width="70" Height="26" FontSize="13" Margin="0,0,8,0" Padding="6,2" VerticalContentAlignment="Center"/>
                        <Button Grid.Column="3" Content="‚úï" Width="26" Height="26" Padding="0" FontSize="13" Style="{StaticResource PrimaryButton}" Command="{Binding ClearFiltersCommand}" ToolTip="R√©initialiser"/>
                    </Grid>
                </Border>
                
                <!-- Grille wallpapers avec virtualisation -->
                <ListBox Grid.Row="2" x:Name="WallpaperListBox" ItemsSource="{Binding Wallpapers}" SelectedItem="{Binding SelectedWallpaper}" SelectionMode="Extended" SelectionChanged="WallpaperListBox_SelectionChanged" Background="Transparent" BorderThickness="0"
                         VirtualizingPanel.IsVirtualizing="True"
                         VirtualizingPanel.VirtualizationMode="Recycling"
                         VirtualizingPanel.ScrollUnit="Pixel"
                         ScrollViewer.IsDeferredScrollingEnabled="True"
                         ScrollViewer.CanContentScroll="True">
                    <ListBox.ContextMenu>
                        <ContextMenu>
                            <MenuItem Header="Ajouter √† une collection" ItemsSource="{Binding DataContext.Collections, RelativeSource={RelativeSource AncestorType=ContextMenu}}">
                                <MenuItem.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock>
                                            <Run Text="{Binding Icon}"/> <Run Text="{Binding Name}"/>
                                        </TextBlock>
                                    </DataTemplate>
                                </MenuItem.ItemTemplate>
                                <MenuItem.ItemContainerStyle>
                                    <Style TargetType="MenuItem">
                                        <Setter Property="Command" Value="{Binding DataContext.AddToCollectionCommand, RelativeSource={RelativeSource AncestorType=ContextMenu}}"/>
                                        <Setter Property="CommandParameter" Value="{Binding}"/>
                                    </Style>
                                </MenuItem.ItemContainerStyle>
                            </MenuItem>
                            <Separator/>
                            <MenuItem Header="üëÅÔ∏è Pr√©visualiser" Command="{Binding DataContext.PreviewWallpaperCommand, RelativeSource={RelativeSource AncestorType=ContextMenu}}"/>
                            <MenuItem Header="‚òÖ Favoris" Command="{Binding DataContext.ToggleFavoriteSelectedCommand, RelativeSource={RelativeSource AncestorType=ContextMenu}}"/>
                            <MenuItem Header="üìÇ Ouvrir dans l'explorateur" Command="{Binding DataContext.OpenInExplorerCommand, RelativeSource={RelativeSource AncestorType=ContextMenu}}"/>
                            <Separator/>
                            <MenuItem Header="üóëÔ∏è Supprimer" Command="{Binding DataContext.DeleteSelectedCommand, RelativeSource={RelativeSource AncestorType=ContextMenu}}"/>
                        </ContextMenu>
                    </ListBox.ContextMenu>
                    <ListBox.ItemsPanel>
                        <ItemsPanelTemplate>
                            <controls:VirtualizingWrapPanel ItemWidth="188" ItemHeight="128" ItemMargin="4"/>
                        </ItemsPanelTemplate>
                    </ListBox.ItemsPanel>
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Border Width="180" Height="120" CornerRadius="8" Background="{StaticResource CardBrush}" Cursor="Hand" MouseLeftButtonDown="WallpaperItem_MouseLeftButtonDown">
                                <Grid>
                                    <Image Source="{Binding FilePath, Converter={StaticResource AsyncThumb}}" Stretch="UniformToFill"/>
                                    
                                    <!-- Ic√¥ne play au centre pour les vid√©os -->
                                    <Border Background="#60000000" CornerRadius="50" Width="40" Height="40"
                                            HorizontalAlignment="Center" VerticalAlignment="Center"
                                            Visibility="{Binding Type, Converter={StaticResource TypeToVis}, ConverterParameter=Video}">
                                        <TextBlock Text="‚ñ∂" FontSize="18" Foreground="White" 
                                                   HorizontalAlignment="Center" VerticalAlignment="Center" Margin="2,0,0,0"/>
                                    </Border>
                                    
                                    <Border Background="#80000000" VerticalAlignment="Bottom" CornerRadius="0,0,8,8" Padding="8,4">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Text="{Binding Type, Converter={StaticResource TypeToIcon}}" FontSize="12" Margin="0,0,4,0"/>
                                            <TextBlock Grid.Column="1" Text="{Binding DisplayName}" FontSize="11" Foreground="White" TextTrimming="CharacterEllipsis"/>
                                        </Grid>
                                    </Border>
                                    <Border Background="{StaticResource PrimaryBrush}" HorizontalAlignment="Right" VerticalAlignment="Top" CornerRadius="0,8,0,8" Padding="6,2" Visibility="{Binding IsFavorite, Converter={StaticResource BoolToVis}}">
                                        <TextBlock Text="‚òÖ" Foreground="White" FontSize="10"/>
                                    </Border>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
                
                <!-- Actions s√©lection simple -->
                <Border Grid.Row="3" Style="{StaticResource CardStyle}" Margin="0,12,0,0" Visibility="{Binding SelectedWallpaper, Converter={StaticResource NullToVis}}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Image Source="{Binding SelectedWallpaper.FilePath, Converter={StaticResource PathToThumb}}" Width="100" Height="60" Stretch="UniformToFill" Margin="0,0,16,0" Cursor="Hand" MouseLeftButtonDown="PreviewImage_Click"/>
                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                            <TextBlock Text="{Binding SelectedWallpaper.DisplayName}" FontSize="14" FontWeight="SemiBold" Foreground="{StaticResource TextPrimaryBrush}"/>
                            <TextBlock FontSize="12" Foreground="{StaticResource TextSecondaryBrush}">
                                <Run Text="{Binding SelectedWallpaper.Resolution}"/> ‚Ä¢ <Run Text="{Binding SelectedWallpaper.FileSizeFormatted}"/>
                            </TextBlock>
                        </StackPanel>
                        <StackPanel Grid.Column="2" Orientation="Horizontal">
                            <Button Content="üëÅÔ∏è" Command="{Binding PreviewWallpaperCommand}" Width="36" Height="36" Margin="0,0,8,0" Style="{StaticResource PrimaryButton}" Padding="0" ToolTip="Pr√©visualiser"/>
                            <Button Content="‚òÖ" Command="{Binding ToggleFavoriteCommand}" Width="36" Height="36" Margin="0,0,8,0" Style="{StaticResource PrimaryButton}" Padding="0" ToolTip="Favoris"/>
                            
                            <!-- Bouton Ajouter √† la collection avec menu d√©roulant -->
                            <Button x:Name="BtnAddToCollection" Content="üìå" Width="36" Height="36" Margin="0,0,8,0" Style="{StaticResource PrimaryButton}" Padding="0" ToolTip="Ajouter √† une collection" Click="BtnAddToCollection_Click">
                                <Button.ContextMenu>
                                    <ContextMenu x:Name="CollectionMenu" ItemsSource="{Binding Collections}" Placement="Top">
                                        <ContextMenu.ItemTemplate>
                                            <DataTemplate>
                                                <TextBlock>
                                                    <Run Text="{Binding Icon}"/> <Run Text="{Binding Name}"/>
                                                </TextBlock>
                                            </DataTemplate>
                                        </ContextMenu.ItemTemplate>
                                        <ContextMenu.ItemContainerStyle>
                                            <Style TargetType="MenuItem">
                                                <Setter Property="Command" Value="{Binding DataContext.AddToCollectionCommand, RelativeSource={RelativeSource AncestorType=ContextMenu}}"/>
                                                <Setter Property="CommandParameter" Value="{Binding}"/>
                                            </Style>
                                        </ContextMenu.ItemContainerStyle>
                                    </ContextMenu>
                                </Button.ContextMenu>
                            </Button>
                            
                            <Button Content="üìÇ" Command="{Binding OpenInExplorerCommand}" Width="36" Height="36" Margin="0,0,8,0" Style="{StaticResource PrimaryButton}" Padding="0" ToolTip="Ouvrir dossier"/>
                            <Button Content="Appliquer" Command="{Binding ApplyWallpaperCommand}" Style="{StaticResource PrimaryButton}" Margin="0,0,8,0"/>
                            <Button Content="üóëÔ∏è" Command="{Binding RemoveWallpaperCommand}" Width="36" Height="36" Background="#EF4444" Style="{StaticResource PrimaryButton}" Padding="0" ToolTip="Supprimer"/>
                        </StackPanel>
                    </Grid>
                </Border>
                
                <!-- Actions multi-s√©lection -->
                <Border Grid.Row="3" Style="{StaticResource CardStyle}" Margin="0,12,0,0" Background="#1E3A5F" Visibility="{Binding SelectedCount, Converter={StaticResource MultiSelectToVis}}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock VerticalAlignment="Center" Foreground="White" FontSize="14">
                            <Run Text="{Binding SelectedCount, Mode=OneWay}"/> √©l√©ment(s) s√©lectionn√©(s)
                        </TextBlock>
                        <StackPanel Grid.Column="1" Orientation="Horizontal">
                            <Button Content="‚òÖ Favoris" Command="{Binding ToggleFavoriteSelectedCommand}" Style="{StaticResource PrimaryButton}" Margin="0,0,8,0"/>
                            
                            <!-- Bouton Ajouter √† la collection (multi-s√©lection) -->
                            <Button x:Name="BtnAddToCollectionMulti" Content="üìå Collection" Style="{StaticResource PrimaryButton}" Margin="0,0,8,0" Click="BtnAddToCollection_Click">
                                <Button.ContextMenu>
                                    <ContextMenu ItemsSource="{Binding Collections}" Placement="Top">
                                        <ContextMenu.ItemTemplate>
                                            <DataTemplate>
                                                <TextBlock>
                                                    <Run Text="{Binding Icon}"/> <Run Text="{Binding Name}"/>
                                                </TextBlock>
                                            </DataTemplate>
                                        </ContextMenu.ItemTemplate>
                                        <ContextMenu.ItemContainerStyle>
                                            <Style TargetType="MenuItem">
                                                <Setter Property="Command" Value="{Binding DataContext.AddToCollectionCommand, RelativeSource={RelativeSource AncestorType=ContextMenu}}"/>
                                                <Setter Property="CommandParameter" Value="{Binding}"/>
                                            </Style>
                                        </ContextMenu.ItemContainerStyle>
                                    </ContextMenu>
                                </Button.ContextMenu>
                            </Button>
                            
                            <Button Content="üóëÔ∏è Supprimer" Command="{Binding DeleteSelectedCommand}" Style="{StaticResource PrimaryButton}" Background="#EF4444"/>
                        </StackPanel>
                    </Grid>
                </Border>
                
                <!-- Drop overlay -->
                <Border Grid.Row="2" x:Name="DropOverlay" Background="#CC1E293B" CornerRadius="12" Visibility="Collapsed">
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                        <TextBlock Text="üì•" FontSize="64" HorizontalAlignment="Center"/>
                        <TextBlock Text="D√©posez vos fichiers ici" FontSize="20" Foreground="White" FontWeight="SemiBold"/>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- COLLECTIONS -->
            <Grid Visibility="{Binding IsChecked, ElementName=tabCollections, Converter={StaticResource BoolToVis}}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="280"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <Grid Grid.ColumnSpan="2" Margin="0,0,0,16">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel>
                        <TextBlock Text="Collections" FontSize="24" FontWeight="Bold" Foreground="{StaticResource TextPrimaryBrush}"/>
                        <TextBlock Text="Organisez vos fonds d'√©cran par th√®me" FontSize="12" Foreground="{StaticResource TextSecondaryBrush}"/>
                    </StackPanel>
                    <Button Grid.Column="1" Content="+ Nouvelle collection" Style="{StaticResource PrimaryButton}" Command="{Binding CreateCollectionCommand}"/>
                </Grid>
                
                <!-- Liste des collections -->
                <Border Grid.Row="1" Style="{StaticResource CardStyle}" Margin="0,0,16,0">
                    <ListBox ItemsSource="{Binding Collections}" SelectedItem="{Binding SelectedCollection}" Background="Transparent" BorderThickness="0">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border Padding="12" Margin="2" CornerRadius="8" Background="{StaticResource SurfaceBrush}">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="{Binding Icon}" FontSize="20" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                            <TextBlock Text="{Binding Name}" FontSize="14" FontWeight="SemiBold" Foreground="{StaticResource TextPrimaryBrush}"/>
                                            <TextBlock FontSize="11" Foreground="{StaticResource TextSecondaryBrush}">
                                                <Run Text="{Binding Count, Mode=OneWay}"/> fond(s) d'√©cran
                                            </TextBlock>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Border>
                
                <!-- D√©tail de la collection -->
                <Border Grid.Row="1" Grid.Column="1" Style="{StaticResource CardStyle}" Visibility="{Binding SelectedCollection, Converter={StaticResource NullToVis}}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <!-- En-t√™te de la collection -->
                        <Grid Margin="0,0,0,12">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <!-- Ic√¥ne fixe pour Favoris -->
                            <TextBlock Text="{Binding SelectedCollection.Icon}" FontSize="24" VerticalAlignment="Center" Margin="0,0,12,0"
                                       Visibility="{Binding IsSelectedCollectionFavorites, Converter={StaticResource BoolToVis}}"/>
                            
                            <!-- ComboBox pour les autres collections -->
                            <ComboBox Width="50" Height="36" SelectedItem="{Binding SelectedCollection.Icon, Mode=TwoWay}" FontSize="20" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Margin="0,0,8,0"
                                      Visibility="{Binding CanEditSelectedCollection, Converter={StaticResource BoolToVis}}">
                                <sys:String>üìÅ</sys:String>
